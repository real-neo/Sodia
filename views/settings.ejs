<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head.ejs %>
</head>
<body onload="initSodia()">
<header>
    <% include partials/navbar.ejs %>
</header>
<div class="container col-md-3">

    <div class="text-center" id="offline_div" style="display: none;">You are offline now.</div>

    <div class="text-center">
        <img class="mb-4" src="/images/icons/icon-256x256.png" alt="" width="72" height="72">
        <h3 class="mb-3">Update your info</h3>
        <% if (message && message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>
    </div>

    <form class="text-center">
        <input type="text" name="nickname" id="inputName" class="form-control mb-2" placeholder="Nickname" required>
        <button class="btn btn-lg btn-primary btn-block mb-2" onclick="updateName()">Update Name</button>
    </form>

    <form class="text-center" id="avatarForm" enctype="multipart/form-data">
        <input type="file" name="avatar" id="avatarFile" accept="image/*" class="form-control mb-2">
        <button class="btn btn-lg btn-primary btn-block mb-2" onclick="updateAvatar()">Update Avatar</button>
    </form>

    <form class="text-center">
        <input type="password" name="password" autocomplete="new-password" id="password" class="form-control mb-2" placeholder="Password" required>
        <input type="password" name="passwordAgain" autocomplete="new-password" id="passwordAgain" class="form-control mb-2" placeholder="Confirm Password" required>
        <button class="btn btn-lg btn-primary btn-block mb-2" onclick="updatePassword()">Update Password</button>
    </form>

</div>
<footer>
    <% include partials/footer.ejs %>
</footer>
<% include partials/modal.ejs %>
</body>
</html>