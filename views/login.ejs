<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head.ejs %>
</head>
<body>
<div class="container col-md-3">

    <div class="text-center" id="offline_div" style="display: none;">You are offline now.</div>

    <form class="text-center" id="loginForm">
        <a href="/" title="Sodia">
            <img class="mb-4" src="/images/icons/icon-256x256.png" alt="" width="72" height="72">
            <h3 class="mb-3">Sodia</h3>
        </a>
        <% if (message && message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>
        <input type="email" name="email" id="email" class="form-control mb-2" placeholder="Email" required
               autofocus>
        <input type="password" name="password" id="password" class="form-control mb-2" placeholder="Password"
               required>
        <button class="btn btn-lg btn-primary btn-block mt-3" onclick="login()">Login</button>
        <p class="mt-3">Didn't have an account? <a href="/reg">Register now.</a></p>
    </form>

</div>
<footer>
    <% include partials/footer.ejs %>
</footer>
<% include partials/modal.ejs %>
</body>
</html>