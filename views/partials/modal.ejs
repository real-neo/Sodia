<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <img class="mx-auto" src="/images/icons/icon-256x256.png" alt="" width="72" height="72">
            <h3 class="text-center">Welcome to Sodia</h3>
            <nav class="mb-3">
                <div class="nav nav-tabs nav-justified" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link active" id="nav-login-tab" data-toggle="tab" href="#nav-login"
                       role="tab" aria-controls="nav-login" aria-selected="true">Login</a>
                    <a class="nav-item nav-link" id="nav-reg-tab" data-toggle="tab" href="#nav-reg" role="tab"
                       aria-controls="nav-reg" aria-selected="false">Register</a>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-login" role="tabpanel" aria-labelledby="nav-home-tab">
                    <form id="loginForm">
                        <input type="email" name="email" id="email" class="form-control mb-2" placeholder="Email"
                               required>
                        <input type="password" name="password" id="password" class="form-control mb-2"
                               placeholder="Password" required>
                    </form>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button class="btn btn-primary" onclick="login()">Login</button>
                    </div>
                </div>
                <div class="tab-pane fade" id="nav-reg" role="tabpanel" aria-labelledby="nav-profile-tab">
                    <form id="regForm">
                        <input type="email" name="email" id="emailReg" class="form-control mb-2" placeholder="Email"
                               required>
                        <input type="text" name="user_id" id="user_id" class="form-control mb-2" placeholder="User ID"
                               required>
                        <input type="text" name="nickname" id="nickname" class="form-control mb-2"
                               placeholder="Nickname" required>
                        <input type="password" name="password" autocomplete="new-password" id="passwordReg"
                               class="form-control mb-2"
                               placeholder="Password" required>
                        <input type="password" name="passwordAgain" autocomplete="new-password" id="passwordAgain"
                               class="form-control mb-2" placeholder="Confirm Password" required>
                    </form>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button class="btn btn-primary" onclick="reg()">Register</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

